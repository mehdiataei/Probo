<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="end"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/heatmap_switch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/article_heatmap_toggle_title" />

    <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
        android:id="@+id/heatmap_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/heatmap_switch_title"
        app:ball_press_color="@color/md_deep_orange_500"
        app:ball_release_color="@color/md_white_1000"
        app:base_press_color="@color/md_deep_orange_50"
        app:base_release_color="@color/md_white_1000"

        app:icon_press="@drawable/edit_mode"
        app:icon_release="@drawable/reading_mode" />
</RelativeLayout>